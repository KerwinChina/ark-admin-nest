  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./bootstrap.js",
    "dev": "cross-env NODE_ENV=local midway-bin dev --ts",
    "test": "midway-bin test --ts",
    "cov": "midway-bin cov --ts",
    "lint": "mwts check",
    "lint:fix": "mwts fix",
    "ci": "npm run cov",
    "build": "midway-bin build -c",
    "reinstall": "rimraf yarn.lock && rimraf package-lock.json && rimraf node_modules && pnpm i",
    "clean:runtime": "rimraf data && rimraf logs",
    "clean:build": "rimraf dist",
    "clean": "pnpm clean:runtime && pnpm clean:build"
  },
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ],
