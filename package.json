    "@midwayjs/koa": "^3.5.3",
    "@midwayjs/logger": "^2.17.0",
    "@midwayjs/redis": "^3.5.3",
    "@midwayjs/typeorm": "^3.5.3",
    "@midwayjs/validate": "^3.5.3",
    "dayjs": "^1.11.5",
    "lodash-es": "^4.17.21",
    "mysql2": "^2.3.3",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@midwayjs/cli": "^1.3.13",
    "@midwayjs/mock": "^3.5.3",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/koa": "^2.13.5",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^14.18.31",
    "cross-env": "^6.0.3",
